# Server Configuration
PORT=3000
NODE_ENV=development

# AI API Keys
# OpenAI API Key (optional - only needed if using OpenAI models)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic API Key (optional - only needed if using Claude models)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# FLUX API Key (optional - only needed if using FLUX models for image generation)
# Get your API key from: https://api.bfl.ai/
FLUX_API_KEY=your_flux_api_key_here

# AI Model Configuration
# TEXT_MODEL: Model used for task generation
# IMAGE_MODEL: Model used for image generation
#
# OpenAI Models: gpt-4o, gpt-4.1, gpt-4.1-mini, o3-mini-high
# Claude Models: claude-sonnet-4-20250514, claude-3-5-sonnet-20241022
# Image Models: dall-e-3 (OpenAI), flux-2-pro, flux-2-flex, flux-dev (FLUX)
TEXT_MODEL=gpt-4o
IMAGE_MODEL=flux-2-pro

# Feature Flags
DISABLE_IMAGE_GENERATION=false

# Storage Configuration
STORAGE_DIR=./storage
OUTPUT_DIR=./output

# Firebase Configuration
# Note: Do not use FIREBASE_ prefix as it's reserved by Firebase Extensions
PROJECT_ID=eduforge-d29d9
STORAGE_BUCKET=eduforge-d29d9.firebasestorage.app

# CORS Configuration
CORS_ORIGIN=*

# reCAPTCHA Configuration
# Get your secret key from https://www.google.com/recaptcha/admin
# Use reCAPTCHA v2 Checkbox (must match frontend site key)
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key_here

# Stripe Configuration
# Get your keys from https://dashboard.stripe.com/apikeys
# For development: Use test mode keys (starts with sk_test_)
# For production: Use live mode keys (starts with sk_live_)
STRIPE_SECRET_KEY=your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret_here

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_ID_BASIC_ANNUAL=price_basic_annual
STRIPE_PRICE_ID_NORMAL_ANNUAL=price_normal_annual
STRIPE_PRICE_ID_PRO_ANNUAL=price_pro_annual

# Payment Configuration
# Set to 'true' to use mock payments for localhost testing
# Set to 'false' to use real Stripe payments
USE_MOCK_PAYMENTS=true
