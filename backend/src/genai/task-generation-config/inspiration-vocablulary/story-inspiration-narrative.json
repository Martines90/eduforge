{
  "storytelling_modes": [
    {
      "id": "first_person",
      "name": "First Person",
      "description": "Story told from the hero's perspective using 'I/me'",
      "characteristics": [
        "immersive",
        "personal",
        "limited viewpoint",
        "direct experience"
      ],
      "example": "I calculated the trajectory..."
    },
    {
      "id": "second_person",
      "name": "Second Person",
      "description": "Story addresses the reader directly using 'you'",
      "characteristics": [
        "engaging",
        "interactive feel",
        "places reader in story",
        "instructional"
      ],
      "example": "You need to calculate the trajectory..."
    },
    {
      "id": "third_person_limited",
      "name": "Third Person Limited",
      "description": "Story follows one character using 'he/she/they'",
      "characteristics": [
        "focused",
        "one perspective",
        "intimate",
        "balanced distance"
      ],
      "example": "She calculated the trajectory..."
    },
    {
      "id": "third_person_omniscient",
      "name": "Third Person Omniscient",
      "description": "Narrator knows everything about all characters",
      "characteristics": [
        "comprehensive",
        "multiple perspectives",
        "godlike view",
        "informative"
      ],
      "example": "As Maria calculated the trajectory, her team watched nervously..."
    }
  ],
  "narrative_structures": [
    {
      "id": "linear",
      "name": "Linear/Chronological",
      "description": "Events unfold in time order",
      "pattern": "beginning → middle → end"
    },
    {
      "id": "in_medias_res",
      "name": "In Medias Res",
      "description": "Story starts in the middle of action",
      "pattern": "action → backstory → resolution"
    },
    {
      "id": "frame_story",
      "name": "Frame Story",
      "description": "Story within a story",
      "pattern": "outer story → inner story → return to outer"
    },
    {
      "id": "reverse_chronology",
      "name": "Reverse Chronology",
      "description": "Story told backwards in time",
      "pattern": "end → middle → beginning"
    },
    {
      "id": "parallel_narratives",
      "name": "Parallel Narratives",
      "description": "Multiple storylines happening simultaneously",
      "pattern": "storyline A ↔ storyline B → convergence"
    }
  ],
  "pacing": [
    {
      "id": "fast",
