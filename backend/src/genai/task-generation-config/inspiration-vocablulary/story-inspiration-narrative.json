      ]
    },
    {
      "id": "slow",
      "name": "Slow/Deliberate",
      "characteristics": [
        "detailed",
        "contemplative",
        "building tension",
        "atmospheric"
      ],
      "suitable_for": [
        "mystery",
        "discovery",
        "character development",
        "complex problems"
      ]
    }
  ]
