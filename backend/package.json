{
  "name": "eduforger-backend",
  "version": "1.0.0",
  "description": "",
  "main": "dist/backend/src/functions.js",
  "scripts": {
    "build": "tsc && npm run copy:prompts && npm run copy:mappings && npm run copy:shared",
    "copy:prompts": "mkdir -p dist/genai/prompts && cp -r src/genai/prompts/* dist/genai/prompts/",
    "copy:mappings": "mkdir -p dist/data/mappings && cp -r src/data/mappings/* dist/data/mappings/",
    "copy:shared": "mkdir -p dist/backend/_modules/@eduforger && cp ../shared/package.json dist/backend/_modules/@eduforger/shared-package.json.tmp && cp -r dist/shared dist/backend/_modules/@eduforger/shared && mv dist/backend/_modules/@eduforger/shared-package.json.tmp dist/backend/_modules/@eduforger/shared/package.json",
    "start": "node -r tsconfig-paths/register dist/backend/src/index.js",
    "dev": "ts-node -r tsconfig-paths/register src/index.ts",
    "dev:watch": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/index.ts",
    "prod": "npm run build && npm start",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "lint:fix": "eslint \"src/**/*.ts\" --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "check": "npm run typecheck && npm run lint && npm run test",
    "purge:math_subject_tree_hu": "npx tsx src/data/subject_mapping/purge_example_tasks.ts",
    "migrate:subjects": "npx ts-node src/scripts/migrate-subject-mappings.ts",
    "cleanup:subjects": "npx ts-node src/scripts/cleanup-old-subject-mappings.ts",
    "diagnose:firestore": "npx ts-node src/scripts/diagnose-firestore.ts",
    "force-delete:mexico": "npx ts-node src/scripts/force-delete-mexico.ts",
    "emulators:start": "firebase emulators:start --only firestore",
    "emulators:kill": "pkill -f firebase",
    "test:rules": "node test-firestore-rules.js",
    "test:rules:watch": "nodemon --watch firestore.rules --exec 'npm run test:rules'",
    "deploy": "firebase deploy",
    "deploy:hosting": "firebase deploy --only hosting && ./scripts/post-deploy-hosting.sh",
    "deploy:functions": "firebase deploy --only functions",
    "fix-iam": "./scripts/post-deploy-hosting.sh",
    "deploy:extensions": "firebase deploy --only extensions",
    "deploy:firestore": "firebase deploy --only firestore",
    "deploy:firestore:indexes": "firebase deploy --only firestore:indexes",
    "deploy:firestore:rules": "firebase deploy --only firestore:rules"
  },
  "keywords": [
    "openai",
    "typescript",
    "generator"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@stripe/stripe-js": "^8.6.0",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.22.1",
    "firebase-admin": "^13.6.0",
    "firebase-functions": "^7.0.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "nodemailer": "^7.0.11",
    "openai": "^4.68.0",
    "stripe": "^20.1.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.10.0",
    "@types/nodemailer": "^7.0.4",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.2.0",
    "nodemon": "^3.1.11",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.0"
  }
}
